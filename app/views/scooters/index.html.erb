<!-- app/views/scooters/index.html.erb -->

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1538895490524-0ded232a96d8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60);">
  <div class="container">
    <div class="text-center">
      <% if @destination %>
        <h1>Lets Scoot in </h1>
        <h1><%= @destination %> !</h1>
      <% else %>
        <h1>Lets Scoot!</h1>
      <% end %>
      <p>
        <span id="banner-typed-text"></span>
      </p>

    <form class="form-inline justify-content-center">
      <input id="searchbox" class="form-control mr-sm-2 text-left" type="search" placeholder="Try 'Palermo'" aria-label="Search" name="destination">
      <button class="btn btn-outline-warning my-2 my-sm-0" type="submit">Search</button>
    </form>

    </div>
  </div>
</div>


<div class="d-block d-lg-flex">

  <div class="cards flex-grow-1">
    <% @scooters.each do |scooter| %>
    <%= link_to scooter_path(scooter), class:"card-wrapper" do %>
    <div class="card">
      <% if scooter.photo.attached? %>
        <%= cl_image_tag scooter.photo.key, class:"card-img-top :width=>70 :height=>53 :crop=>'scale'"%>
      <% else %>
        <img src="https://source.unsplash.com/1600x900/?scooter&${<%=scooter.brand%><%=scooter.model%>}"class="card-img-top" alt="scooter-img">
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= scooter.brand %></h5>
        <p class="card-text"><%= scooter.model %></p>
        <p class="card-text"><%= scooter.transmission %></p>
        <p class="card-text">$<%= scooter.price_per_day %></p>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>

  <div id="mapbox" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>



