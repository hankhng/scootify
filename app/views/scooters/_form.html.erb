<div class="container">

  <%= simple_form_for(@scooter) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :brand %>
    <%= f.input :model %>
    <%= f.input :transmission, as: :radio_buttons, collection: %w(manual automatic) %>
    <%= f.input :year %>
    <%= f.input :price_per_day %>
    <%= f.input :address %>
    <%= f.input :license_type, as: :radio_buttons, collection: %w(A1 A2 A3) %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions btn btn-outline-secondary">
    <%= f.button :submit %>
  </div>
  <% end %>

</div>
