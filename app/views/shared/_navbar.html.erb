<div class="navbar sticky-top navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/scooters", class: "navbar-brand" do %>
  <%= image_tag "b&w" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% unless user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Login", "/users/sign_in", class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Signup", "/users/sign_up", class: "nav-link" %>
          </li>
      <% end %>
      <% if user_signed_in? %>
        <li class="nav-item  dropdown">
          <%= link_to "Renter", "#", class: "nav-link dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false%>
         <div class="dropdown-menu" aria-labelledby="navbarDropdown">
           <%= link_to "Bookings", "/bookings", class: "dropdown-item" %>
          </div>
        </li>
        <li class="nav-item  dropdown">
          <%= link_to "Owner", "#", class: "nav-link dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false%>
         <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <%= link_to "Earnings", "/earnings",class: "dropdown-item" %>
           <%= link_to "Scooters", "/owned_scooters", class: "dropdown-item" %>
           <%= link_to "Add Scooter", "/scooters/new", class: "dropdown-item" %>
          </div>
        </li>
      <% end %>
      <li class="nav-item dropdown ml-3">
        <% if user_signed_in? %>
          <%= current_user.email %>
        <% end %>
        <%= image_tag "https://avatars0.githubusercontent.com/u/30577676?s=460&v=4", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Profile", "#", class: "dropdown-item" %>
          <%= link_to "Logout", "/users/sign_out", method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>
