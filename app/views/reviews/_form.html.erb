<div class="container">

  <%= simple_form_for([@scooter, @review]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :comment %>
    <%= f.input :rating, as: :radio_buttons, collection: %w(1 2 3 4 5)  %>
  </div>

  <div class="form-actions btn btn-outline-secondary">
    <%= f.button :submit %>
  </div>
  <% end %>

</div>
