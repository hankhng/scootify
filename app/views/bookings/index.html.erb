<div class="container">
  <% if @bookings.empty? %>
  <h3 class="my-3">It looks like you don't have any bookings yet, <%= current_user.first_name%></h3>
  <h3>Do you want to rent a scooter for your next trip?</h3>

  <div>
    <%= link_to "Find scooter", scooters_path, class:"btn btn-sm btn-outline-secondary" %>
  </div>

  <% else %>
  <div class="text-center">
    <h1>My bookings</h1>



  </div>

  <div class="bd-example">
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel" style="width: 625px; height: 520px; margin: 0 auto">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h5>First slide label</h5>
            <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
          </div>
        </div>
        <div class="carousel-item">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h5>Second slide label</h5>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
          </div>
        </div>
        <div class="carousel-item">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h5>Third slide label</h5>
            <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
          </div>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

  <div class="card-bookings text-center w-100">
    <div class="" style="width: 60%; display: inline-block">
      <% @bookings.each do |booking| %>
      <div class="card-product booking">
        <div style="background-image: url('https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg'); background-size: cover; width: 175px;" class="h-100 d-flex align-items-end">
          <p class="m-0 w-100 text-center bg-light">booking id:<%= booking.id %></p>
        </div>
        <div class="card-product-info scooter">
          <div class="d-flex justify-content-between">
            <div class="ml-4 d-flex flex-column justify-content-between h-100">
              <div>
                <h1 class="m-0"><%= booking.scooter.brand %></h1>
                <h2 class="m-0 font-weight-lighter "><%= booking.scooter.model %></h2>
              </div>
              <h1 class="mt-4">$<%= booking.booking_price %></h1>
            </div>
            <div class="mr-5">
              <div>
                <h2 class="mb-1 p-1 text-center" style="border: 1px solid lightgrey; background-color:
                <%= booking.start_date < Date.today ? "lightgrey" : "white" %>">
                <i class="far fa-calendar-check"></i> <%= booking.start_date.strftime("%e- %b") %></h2>

                <h2 class="mb-1 p-1 text-center" style="border: 1px solid lightgrey; background-color:
                <%= booking.start_date < Date.today ? "lightgrey" : "white" %>">
                <i class="far fa-calendar-minus"></i> <%= booking.end_date.strftime("%e- %b")%></h2>
              </div>
              <div class="text-center">
                <a><%= link_to "Leave review!", new_scooter_review_path(booking.scooter), class:"btn btn-outline-secondary px-4" %></a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
      <% end %>
  </div>

  </div>
  <!-- container closing div -->
</div>
