<div class="container">
  <% if @bookings.empty? %>
  <h3 class="my-3">It looks like you don't have any bookings yet, <%= current_user.first_name%></h3>
  <h3>Do you want to rent a scooter for your next trip?</h3>

  <div>
    <%= link_to "Find scooter", scooters_path, class:"btn btn-sm btn-outline-secondary" %>
  </div>

  <% else %>

  <h1>My bookings</h1>

  <div class="card-product">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
    <div class="card-product-infos">
      <h2>Product name</h2>
      <p>Product description with <strong>relevant info</strong> only.</p>
    </div>
  </div>

  <% end %>
</div>
