<div class="container">
  <% if @bookings.empty? %>
  <h3 class="my-3">It looks like you don't have any bookings yet, <%= current_user.first_name%></h3>
  <h3>Do you want to rent a scooter for your next trip?</h3>

  <div>
    <%= link_to "Find scooter", scooters_path, class:"btn btn-sm btn-outline-secondary" %>
  </div>

  <% else %>
  <div class="text-center">
    <h1>My bookings</h1>

    <div class="bd-example">
      <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel" style="width: 625px; height: 400px; margin: 0 auto">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="https://res.cloudinary.com/dvligih2x/image/upload/DyvBkx4htiPSmw4GZUNjho5g" class="d-block w-101" alt="..." style="height: 400px">

            <div class="carousel-caption d-none d-md-block">
              <h5>Your previous rides</h5>
              <p>Enjoy the memories!</p>
            </div>
          </div>
          <div class="carousel-item">
            <img src="https://res.cloudinary.com/dvligih2x/image/upload/uEK4qLJ95TmMBrLCUap2DEwK" class="d-block w-100" alt="..." style="height: 400px">
            <div class="carousel-caption d-none d-md-block">
              <h5>Honda XR250</h5>
              <p>Single-cylinder, SOHC, 4-valve, oil-cooled, four-stroke</p>
            </div>
          </div>
          <div class="carousel-item">
            <img src="https://res.cloudinary.com/dvligih2x/image/upload/RzUnR6ZdBdxWnwWCYQ43CTwa" class="d-block w-100" alt="..." style="height:400px">
            <div class="carousel-caption d-none d-md-block">
              <h5>Scootify</h5>
              <p>Your next ride, we hope you have a great time.</p>
            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <div class="card-bookings text-center w-100">
      <div class="" style="width: 60%; display: inline-block">
        <% @bookings.each do |booking| %>
        <div class="card-product booking">

          <div style="background-size: cover; width: 175px;" class="h-100 d-flex align-items-end justify-content-center">
            <%= cl_image_tag booking.scooter.photo.key, class:"img-fluid rounded min-vw-25 w-100 object-fit-cover object-fit-center"%>

            <p style="position: absolute; width: 175px; background-color: white;" class="m-0 bg-light text-center">booking id:<%= booking.id %></p>

          </div>
          <div class="card-product-info scooter">
            <div class="d-flex justify-content-between">
              <div class="ml-4 d-flex flex-column justify-content-between h-100">
                <div>
                  <h1 class="m-0"><%= booking.scooter.brand %></h1>
                  <h2 class="m-0 font-weight-lighter "><%= booking.scooter.model %></h2>
                </div>
                <h1 class="mt-4">$<%= booking.booking_price %></h1>
              </div>
              <div class="mr-5">
                <div>
                  <h2 class="mb-1 p-1 text-center" style="border: 1px solid lightgrey; background-color:
                  <%= booking.start_date < Date.today ? "lightgrey" : "white" %>">
                  <i class="far fa-calendar-check"></i> <%= booking.start_date.strftime("%e- %b") %></h2>

                  <h2 class="mb-1 p-1 text-center" style="border: 1px solid lightgrey; background-color:
                  <%= booking.start_date < Date.today ? "lightgrey" : "white" %>">
                  <i class="far fa-calendar-minus"></i> <%= booking.end_date.strftime("%e- %b")%></h2>
                </div>
                <div class="text-center">
                  <a><%= link_to "Leave review!", new_scooter_review_path(booking.scooter), class:"btn btn-outline-secondary px-4" %></a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>

    </div>
    <!-- container closing div -->
  </div>
