<div class="container">
  <% if @scooters.empty? %>
  <h3 class="my-3">It looks like you don't have any scooters yet, <%= current_user.first_name%></h3>
  <h3>Do you want to add a new scooter?</h3>

  <div>
    <%= link_to "Add new scooter", new_scooter_path, class:"btn btn-sm btn-outline-secondary" %>
  </div>

  <% else %>

  <h1>Earnings for Scooters I own</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Booking #</th>
        <th scope="col">Scooter</th>
        <th scope="col">Total Price</th>
        <th scope="col">Start Date</th>
        <th scope="col">End Date</th>
        <th scope="col">Renter</th>
      </tr>
    </thead>

    <tbody>
     <% @bookings.each_with_index do |booking, index| %>
     <tr class="<%= index.even? ? 'bg-light' : '' %>">
      <th scope="row"><%= booking.id %></th>
      <td><%= booking.scooter.brand %> - <%= booking.scooter.model %></td>
      <td>$<%= booking.booking_price %></td>
      <td><%= booking.start_date.strftime("%e %b %Y ")%></td>
      <td><%= booking.end_date.strftime("%e %b %Y ")%></td>
      <td><%= booking.renter.first_name %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% end %>
</div>
