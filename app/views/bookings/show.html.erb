<h1>Bookings confirmation</h1>

<div class="container">
  <div class="card-trip">
<!--   <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" /> -->
  <div class="card-trip-infos">

    <div>
      <%= image_tag "scooter.jpg", class: "w-5 h-5" %>
      <h2>Your booking is confirmed</h2>
      <p>You are going to scoot on a <%= @booking.scooter.brand %>!</p>
      <img src="https://source.unsplash.com/1600x900/?scooter&${<%=@booking.scooter.brand%><%=@booking.scooter.model%>}" class="img-fluid rounded w-50 h-50 object-fit-cover object-fit-center">
      <h2><%= @booking.scooter.brand %> - <%= @booking.scooter.model %></h2>
      <p>tranmission: <%= @booking.scooter.transmission %></p>
      <br>
      <h2><%= @booking.start_date %> - <%= @booking.start_date%></h2>
      <br>
      <h2>Total Price: <%= @booking.booking_price %></h2>
      <h2>pick-up address</h2>
      <p><%= @booking.scooter.address %></p>
      <div id="mapbox" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">MAP</div>
    </div>
    </div>
  </div>
</div>


<%= link_to 'Book a new trip', scooters_path %>


