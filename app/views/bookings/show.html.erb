
<div class="container justify-content-center">
  <div class="text-center my-4">
    <h1>Your booking is confirmed...</h1>
  </div>
  <div class="card-trip justify-content-center p-1" style="width: 600px; margin: 0 auto;">
    <div class="text-center p-1">
      <%= image_tag "scooter.jpg", class: "avatar-large" %>
      <h2 class="mt-2 mb-2">You are going to scoot on a <%= @booking.scooter.brand %> <%= @booking.scooter.model %></h2>
      <p class="mb-3">Transmission: <%= @booking.scooter.transmission %></p>

      <!-- <img src="https://source.unsplash.com/1600x900/?scooter&${<%=@booking.scooter.brand%><%=@booking.scooter.model%>}" class="img-fluid rounded w-50 height-50px object-fit-cover object-fit-center"> -->
      <div class="row justify-content-center">
        <div class="col-12 col-lg-12">
          <% if @booking.scooter.photo.attached? %>
          <%= cl_image_tag @booking.scooter.photo.key, class:"img-fluid rounded min-vw-25 w-100 object-fit-cover object-fit-center"%>
          <% else %>
          <img src="https://source.unsplash.com/1600x900/?scooter&${<%=@scooter.brand%><%=@scooter.model%>}" class="img-fluid rounded min-vw-25 w-100 object-fit-cover object-fit-center" alt="scooter-img">
          <% end %>
        </div>
      </div>

      <p class="my-4" style="font-size: 16px">From <span class="font-weight-bold"><%= @booking.start_date.strftime('%b %d, %Y') %></span></%> to <span class="font-weight-bold"><%= @booking.end_date.strftime('%b %d, %Y') %></span></%> </p>
      <p class="mt-2 mb-4" style="font-size: 16px">Total Price: <span class="font-weight-bold">$<%= @booking.booking_price %></span></p>
      <p class="mt-3 mb-0" style="text-align: left;">Pick-up your scooter here:</p>

      <div class="row justify-content-center">
        <div class="col-12 col-lg-12">
          <div id="mapbox" class="rounded" style="width: 100%; height: 300px;" data-markers="<%= @marker.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
          <span class="address-box-grey" style="color: white; position: absolute; bottom: 5px; left: 20px;"><%= @booking.scooter.address %></span>
        </div>
      </div>

      <div class="text-center d-flex justify-content-center">
        <h2 class="mt-5 mb-3">
          <%= link_to 'Book a new trip', scooters_path, class:"btn btn-lg btn-warning btn-block" %>
        </h2>
      </div>
    </div>
  </div>
</div>
