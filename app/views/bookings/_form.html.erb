<div class="container">

  <%= simple_form_for(@booking) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">

    <h2>Scootify date picker</h2>

    <%= simple_form_for :search, method: "get" do |f| %>
    <%= f.input :date_range, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%#= f.input :ends_date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <% end %>
    <%= f.input :renter_id %>
    <%= f.input :scooter_id %>

    <%= f.input :booking_price %>
    <%= f.input :comment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
  <% end %>

</div>

